//FIRST PART
SELECT I.*, L.NAME
FROM ISSUES I
JOIN ISSUELISTS L ON L.ID = I.ISSUESLIST_ID;

//SECOND PART
SELECT I.ID, I.SUMMARY, U.*
FROM ISSUES I
JOIN USERS U ON U.ID = I.USER_ID_ASSIGNEDTO;

//THIRD PART
SELECT U.*, COUNT(*) AS ISSUES_NUMBER
FROM USERS U JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.ID;

